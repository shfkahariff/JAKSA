<h1>Senarai Ahli Yang Telah Mengisi Borang</h1>

<br/>

<table id="borangs", class="table table-striped table-bordered table-hover ">
  <thead class= "table-primary">
    <tr>
      <th>Nama Penuh</th>
      <th>No Kad Pengenalan</th>
      <th>Alamat Emel</th>
      <th>No Telefon</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @borangs.each do |borang| %>
      <tr>
        <td><%= borang.nama_penuh %></td>
        <td><%= borang.no_ic %></td>
        <td><%= borang.alamat_emel %></td>
        <td><%= borang.no_tel %></td>
        <td><%= link_to 'Show', borang %></td>
        <td><%= link_to 'Edit', edit_borang_path(borang) %></td>
        <td><%= link_to 'Destroy', borang, method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>