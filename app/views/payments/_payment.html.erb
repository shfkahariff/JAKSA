<div id="<%= dom_id @payment %>">

    <h1>Payment Details</h1>

    <p>
        <strong>Payment Status:</strong>
        <span class="badge text-bg-success"><%= @payment.payment_status %></span>
    </p>

    <p>
        <strong>Order Number:</strong>
        <%= @payment.order_number %>
    </p>

    <p>
        <strong>Name:</strong>
        <%= @payment.buyer_name %>
    </p>

    <p>
        <strong>Email:</strong>
        <%= @payment.buyer_email %>
    </p>

    <p>
        <strong>Phone Number:</strong>
        <%= @payment.buyer_phone %>
    </p>

    <p>
        <strong>Payment ID:</strong>
        <%= @payment.payment_id %>
    </p>

    <p>
        <strong>Status URL:</strong>
        <%= link_to @payment.status_url, @payment.status_url, target: "_blank" %>
    </p>

    <p>
        <strong>Retry URL:</strong>
        <%= link_to @payment.retry_url, @payment.retry_url, target: "_blank" %>
    </p>


   <p>
        <strong>Receipt URL:</strong>
        <%= link_to @payment.receipt_url, @payment.receipt_url, target: "_blank" %>
    </p>


    <p>
        <strong>Transaction Amount: RM </strong>
        <%= @payment.transaction_amount %>
    </p>

    <p> 
        <strong>Borang ID:</strong>
        <%= @payment.borang_id %>
    </p>

    <div>
        <%= link_to "Back to Payment", payments_path %>
    </div>

</div>
